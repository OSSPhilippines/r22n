{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2021", "es7", "es6", "dom"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": [ "src/**/*.ts", "src/**/*.tsx" ],
  "exclude": ["test", "dist", "node_modules"]
}
